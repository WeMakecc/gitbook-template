{
    "plugins": [
        "alerts",
        "anchorjs",
        "styled-blockquotes",
        "todo",
        "include-codeblock",
        "ace",
        "copy-code-button",
        "image-captions"
    ],
    "pluginsConfig": {
        "anchorjs": {
            "placement": "left",
            "visible": "hover",
            "class": "anchorjs-link"
        },
        "include-codeblock": {
            "template": "ace",
            "unindent": true
        },
        "image-captions": {
            "attributes": { "style": "margin: 0 auto" }
        }
    }
}